!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}
    %meta{:charset => "utf-8"}
    %meta{:content => "ie=edge", "http-equiv" => "x-ua-compatible"}
    %meta{:content => "width=device-width, initial-scale=1, shrink-to-fit=no", :name => "viewport"}
    %title= current_page.data.title || "Ricky Ahn's Portfolio"
    = stylesheet_link_tag "site"
    %link{:href => "/images/favicon.png", :rel => "icon", :type => "image/png"}
    %link{:href => "/favicon.ico", :rel => "shortcut icon"}
    %link{:href => "https://fonts.googleapis.com/css?family=Anton", :rel => "stylesheet"}
    %script{:src => "https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"}
    = javascript_include_tag "site"
    %script{:defer => "defer", :src => "https://use.fontawesome.com/releases/v5.0.8/js/all.js"}
    %script{:src => "https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.js"}
  %body.root-container
    = yield

